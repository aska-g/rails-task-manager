<h1>All tasks</h1>
<ul>
<% @tasks.each do |task| %>
  <li><%= link_to task.name, task_path(task) %></li>
  <%= link_to "edit", edit_task_path(task) %>
  <%= link_to "delete", task_path(task),
    method: :delete,
    data: { confirm: "Are you sure you want to delete this task?" } %>

<% end %>
</ul>

<h3><%= link_to "add new task", new_task_path %></h3>


